@model ContactViewModel	

<partial name="_BreadCrumb" />

    <!--Contact-->
<div class="sptb bg-white">
    <div class="container">
        <div class="row">
            <div class="single-page">
                <div class="col-lg-5 col-xl-4 col-md-6 d-block mx-auto">
                    <div class="wrapper wrapper2">
                        <form asp-controller="contactus" asp-action="sendmessage" class="card-body" tabindex="500">
                            <div class="mail mb-5">
                                <label>Ad</label>
                                <input asp-for="Name"   placeholder="Ad">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="email mb-5">
                                <label>E-poçt</label>
                                <input asp-for="Email" placeholder="E-poçt">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="message mb-5">
                                <label>Mesaj</label>
                                <textarea asp-for="Message" class="form-control"placeholder="Mesaj" rows="6"></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>
                            </div>
                            <div class="submit mb-0">
                                <button type="submit" class="btn btn-primary btn-block" >Mesaj göndər</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Contact-->