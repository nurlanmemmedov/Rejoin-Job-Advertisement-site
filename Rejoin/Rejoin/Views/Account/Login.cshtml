@model LoginViewModel

<!--Sliders Section-->
<section>
    <div class="bannerimg cover-image bg-background3" data-image-src="~assets/images/banners/banner2.jpg">
        <div class="header-text mb-0">
            <div class="container">
                <div class="text-center text-white">
                    <h1 class="">Daxil ol</h1>
                    <ol class="breadcrumb text-center">
                        <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Ana səhifə</a></li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Daxil ol</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/Sliders Section-->
<!--Login-Section-->
<section class="sptb">
    <div class="container customerpage">
        <div class="row">
            <div class="single-page">
                <div class="col-lg-5 col-xl-4 col-md-7 d-block mx-auto">
                    <div class="wrapper wrapper2">
                        
                        <form asp-controller="account" asp-action="loginuser" method="post" class="card-body" tabindex="500" enctype="multipart/form-data">
                            <div class="mail">
                                <label>E-poçt</label>
                                <input asp-for="Email" placeholder="E-poçt">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="passwd">
                                <label>Şifrə</label>
                                <input asp-for="Password" placeholder="Şifrə">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="submit">
                                <button type="submit" class="btn btn-primary btn-block">Login</button>
                            </div>
                            <p class="mb-2"><a href="forgot.html">Forgot Password</a></p>
                            <p class="text-dark mb-0">Hesabınız yoxdur?<a asp-controller="account" asp-action="register" class="text-primary ml-1">Qeydiyyatdan Keçin</a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/Login-Section-->

